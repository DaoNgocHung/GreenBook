<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.InfoBookFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:background="@color/colorWhiteSmoke"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardCornerRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgInfoBookNXB"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_nha_xuat_ban"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.629" />
                    <TextView
                        android:id="@+id/txtInfoNXB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="NXB"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookNXB"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleNXB" />
                    <TextView
                        android:id="@+id/txtTitleNXB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Book publisher:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookNXB"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:background="@color/colorWhiteSmoke"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardCornerRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgInfoBookAuthor"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_author"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.629" />
                    <TextView
                        android:id="@+id/txtInfoAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Author"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookAuthor"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleAuthor" />

                    <TextView
                        android:id="@+id/txtTitleAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Author:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookAuthor"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/colorWhiteSmoke"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardCornerRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgInfoBookCategory"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_category"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.629" />

                    <TextView
                        android:id="@+id/txtInfoCate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Category"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookCategory"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleCate" />

                    <TextView
                        android:id="@+id/txtTitleCate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Category:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookCategory"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/colorWhiteSmoke"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardCornerRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgInfoBookDate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_calendar"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.629" />

                    <TextView
                        android:id="@+id/txtInfoDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Date"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookDate"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleDate" />

                    <TextView
                        android:id="@+id/txtTitleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Date pulish:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookDate"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:background="@color/colorWhiteSmoke"
                android:layout_margin="3dp"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                app:cardCornerRadius="4dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/imgInfoBookLanguage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_language"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.629" />

                    <TextView
                        android:id="@+id/txtInfoLanguage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:text="Language"
                        android:textSize="18sp"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookLanguage"
                        app:layout_constraintTop_toBottomOf="@+id/txtTitleLanguge" />

                    <TextView
                        android:id="@+id/txtTitleLanguge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="12dp"
                        android:text="Language:"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toEndOf="@+id/imgInfoBookLanguage"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rViewBookOffer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>


</FrameLayout>